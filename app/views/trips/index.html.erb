

<table>
  <thead>
    <tr>
      <th>Trip date</th>
      <th>Driver</th>
      <th>Weight</th>
      <th>Trip type</th>
      <th>Liter</th>
      <th>Distance</th>
      <th>Average</th>
      <th>Cement</th>
      <th>Destination</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.trip_date %></td>
        <td><%= trip.driver %></td>
        <td><%= trip.weight %></td>
        <td><%= trip.trip_type %></td>
        <td><%= trip.liter %></td>
        <td><%= trip.distance %></td>
        <td><%= trip.average %></td>
        <td><%= trip.cement %></td>
        <td><%= trip.destination %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

